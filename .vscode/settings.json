{
    "[python]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [
            80,
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "never",
        },
    },
    "files.watcherExclude": {
        "**/.git/*/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/data/**": true,
    },
}
